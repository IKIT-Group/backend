generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Pet {
  id          String   @id @default(uuid()) @db.Uuid
  type        String
  name        String
  gender      Boolean
  sterilized  Boolean
  hasPassport Boolean
  health      String
  dateOfBirth DateTime @db.Date
  owners      Owner[]
}

model Owner {
  id          String  @id @default(uuid()) @db.Uuid
  name        String
  age         Int
  phone       String  @unique
  email       String  @unique
  activity    String
  petId       String  @db.Uuid
  pet         Pet     @relation(fields: [petId], references: [id])
  livesAlone  String
  hadPets     String
  hasPets     String
  selfWalking Boolean
  canPay      Boolean
}
